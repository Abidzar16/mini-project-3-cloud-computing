# MQTT Broker Configuration
# Use 'localhost' when running publisher/subscriber on host machine
# Use 'hivemq' when running inside Docker network
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_KEEPALIVE=60

# MQTT Topics
TOPIC_ENERGY=iot/energy
TOPIC_ROOM=iot/room
TOPIC_MOTOR=iot/motor

# InfluxDB Configuration
# Use 'http://localhost:8086' when running subscriber on host machine
# Use 'http://influxdb:8086' when running inside Docker network
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=iot-org
INFLUXDB_BUCKET=iot-data

# Publisher Configuration
PUBLISH_INTERVAL=5

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
